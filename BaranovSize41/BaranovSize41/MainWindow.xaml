<Window x:Class="BaranovSize41.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaranovSize41"
        mc:Ignorable="d"
        Title="BaranovSize41" MinHeight="450" MinWidth="800" FontFamily="TW Cen MT" Icon="ImageLogo/logo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="ImageLogo/logo.png" HorizontalAlignment="Left"></Image>
        
        <TextBlock Text="Size41" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
        
        <Button Content="Back" Name="BtnBack" Width="175" Height="30" HorizontalAlignment="Right" Margin="5" Click="BtnBack_Click" Background="#FFCC6600"></Button>
    </Grid>
</Window>
